<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="true"
                                                 tools:context=".app_secondary.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_bg"
            android:scaleType="centerCrop"
            android:background="#000"
            android:src="@drawable/login_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:paddingBottom="120dp"
            android:gravity="center">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageView3"
                android:src="@drawable/xiaohui"
                android:alpha="0.5"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/login_slogan"
                android:layout_marginBottom="15dp"
                android:alpha="0.5"/>

            <EditText
                android:id="@+id/tv_login_cardnum"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:background="@drawable/login_textfield_bg_username"
                android:ems="10"
                android:hint="一卡通号"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:layout_marginBottom="@dimen/divider_height"
                android:textColor="#ffffff"
                android:textColorHint="#40000000"
                android:textSize="13sp"
                android:imeOptions="actionNext"
                android:gravity="center"
                android:paddingRight="15dp" />

            <EditText
                android:id="@+id/tv_login_pwd"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_textfield_bg_password"
                android:ems="10"
                android:hint="统一身份认证密码"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="#ffffff"
                android:textColorHint="#40000000"
                android:textSize="13sp"
                android:imeOptions="actionDone"
                android:gravity="center"
                android:paddingRight="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="240dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_login_login"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_bg_left"
                    android:text="立即登录"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btn_login_trial"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_bg_right"
                    android:text="暂不登录"
                    android:textColor="#ffffff"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Copyright © 东南大学小猴偷米工作室"
            android:gravity="center"
            android:textColor="#6fffffff"
            android:padding="15dp"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

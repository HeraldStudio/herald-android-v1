<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="cn.seu.herald_android.mod_auth.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@mipmap/login_background_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:paddingBottom="60dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="consola"
                android:gravity="center"
                android:text="登录"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/tv_login_cardnum"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/corners_bg"
                android:ems="10"
                android:hint="一卡通号"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:textColor="#ffffff"
                android:textColorHint="#40000000"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingRight="15dp" />

            <EditText
                android:id="@+id/tv_login_pwd"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/corners_bg"
                android:ems="10"
                android:hint="统一身份认证密码"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="#ffffff"
                android:textColorHint="#40000000"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingRight="15dp" />

            <Button
                android:id="@+id/btn_login_login"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:text="登录"
                android:textColor="#ffffff" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="新生开学前若无法登录，属正常现象，请隔日再试\nCopyright © 东南大学小猴偷米工作室"
            android:gravity="center"
            android:textColor="#6fffffff"
            android:padding="15dp"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

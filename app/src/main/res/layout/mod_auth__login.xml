<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".app_secondary.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/login_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/login_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="130dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.5"
                android:src="@drawable/xiaohui"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:alpha="0.5"
                android:src="@drawable/login_slogan"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <View
                    android:layout_width="220dp"
                    android:layout_height="1dp"
                    android:background="#19fffffe"
                    android:layout_centerInParent="true"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/tv_login_cardnum"
                        android:layout_width="240dp"
                        android:layout_height="45dp"
                        android:background="@drawable/login_textfield_bg_username"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="一卡通号"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#ffffff"
                        android:textColorHint="#40000000"
                        android:textSize="13sp"/>

                    <EditText
                        android:id="@+id/tv_login_pwd"
                        android:layout_width="240dp"
                        android:layout_height="45dp"
                        android:background="@drawable/login_textfield_bg_password"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="统一身份认证密码"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#ffffff"
                        android:textColorHint="#40000000"
                        android:textSize="13sp"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#ffffff"
                    android:layout_centerInParent="true"/>

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_login_login"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/button_bg_left"
                        android:text="立即登录"
                        android:textColor="#ffffff"
                        android:textSize="14sp"/>

                    <Button
                        android:id="@+id/btn_login_trial"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/button_bg_right"
                        android:text="暂不登录"
                        android:textColor="#ffffff"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="Copyright © 东南大学小猴偷米工作室"
            android:textColor="#6fffffff"
            android:textSize="12sp"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

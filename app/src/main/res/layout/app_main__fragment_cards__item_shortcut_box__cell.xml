<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/selectable_item_background_white">

    <include layout="@layout/custom__divider"/>

    <ImageView
        android:id="@+id/ic_shortcut"
        android:layout_centerHorizontal="true"
        android:tint="@color/colorPrimary"
        android:layout_marginTop="5dp"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <TextView
        android:id="@+id/tv_shortcut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_shortcut"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/colorSecondaryText"
        android:textSize="12sp"/>

    <View
        android:id="@+id/notify_dot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignRight="@+id/ic_shortcut"
        android:layout_alignTop="@+id/ic_shortcut"
        android:background="@drawable/timeline_notify_dot"
        android:visibility="gone" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    tools:context="cn.seu.herald_android.mod_communicate.FeedbackActivity"
    tools:showIn="@layout/activity_feedback"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@null"
        android:gravity="left"
        android:hint="您的联系方式(可不填)"
        android:textSize="14sp"
        android:id="@+id/tv_contact"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="5dp"
        android:background="@color/colorFeedbackprimary">
    </View>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:id="@+id/editText"
        android:gravity="top|left"
        android:background="@null"
        android:padding="15dp"
        android:scrollbarStyle="outsideOverlay"
        android:hint="@string/feedback_text"
        android:textSize="14sp" />

</LinearLayout>

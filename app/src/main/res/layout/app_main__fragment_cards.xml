<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMainPagesBg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".app_main.MainActivity">

    <cn.seu.herald_android.custom.CustomSwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.seu.herald_android.app_main.CardsListView
            android:id="@+id/timeline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:divider="@null"
            android:listSelector="@drawable/null_selector"
            android:headerDividersEnabled="false">
        </cn.seu.herald_android.app_main.CardsListView>

    </cn.seu.herald_android.custom.CustomSwipeRefreshLayout>

</LinearLayout>

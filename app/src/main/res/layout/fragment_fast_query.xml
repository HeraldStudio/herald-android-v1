<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.seu.herald_android.mod_query.emptyroom.FastQueryFragment">

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner_emptyroom_xiaoqu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner_emptyroom_jiaoxuelou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner_emptyroom_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner_emptyroom_en"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_query_for_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询今天" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询明天" />
    </LinearLayout>
</LinearLayout>

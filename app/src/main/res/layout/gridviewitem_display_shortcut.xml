<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/selectable_item_background_white">

    <ImageView
        android:id="@+id/ic_shortcut"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="7dp" />

    <TextView
        android:id="@+id/tv_shortcut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_shortcut"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:text="快捷方式"
        android:textColor="@color/colorSecondaryText"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ic_shortcut"
        android:layout_centerInParent="true"
        android:gravity="right|center">

        <TextView
            android:id="@+id/tv_webmodule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grid_icon_web"
            android:paddingBottom="1dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:text="WEB"
            android:visibility="gone"
            android:textColor="#fff"
            android:textIsSelectable="false"
            android:textSize="8sp" />
    </LinearLayout>

</RelativeLayout>
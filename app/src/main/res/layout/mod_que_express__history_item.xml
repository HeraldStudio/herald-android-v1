<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/express_card_history_record"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="@color/expressCardBackground"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <!--今天写代码的时候心情很不好, 虽然是因为女生, 但是我没有那么坚强,-->
        <!--感觉人生变得不完整, 并且失去了好大的一个希望. 别问我bug,-->
        <!--如果代码里有的话, 我真想吃了它, 炸了. 我讨厌你, 可是又喜欢-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/express_txt_submit_time_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-08-06 18:30" />

            <TextView
                android:id="@+id/express_txt_is_fetched_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="已接单|未接单" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/express_txt_sms_record"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:singleLine="false"
                android:text="这是一条示例短信, 可以吗, 或许它现在还不够长. 但是现在它够长了, 可以占两行了" />

            <TextView
                android:id="@+id/express_txt_locate_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取回地点" />

            <TextView
                android:id="@+id/express_txt_arrival_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取回时间" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
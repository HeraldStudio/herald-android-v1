<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="QueryGradeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 成绩查询页风格 -->
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">#22844d</item>
        <item name="colorAccent">#a4de29</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LectureTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 人文讲座风格 -->
        <item name="colorPrimary">@color/colorLectureprimary</item>
        <item name="colorPrimaryDark">@color/colorLectureprimary_dark</item>
        <item name="colorAccent">@color/colorLectureaccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="QuerySchoolBusTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 校车时刻表风格 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
